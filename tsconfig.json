{
  "extends": "@tsconfig/react-native/tsconfig.json" /* Recommended React Native TSConfig base */,
  "compilerOptions": {
    "moduleResolution": "node",
    "baseUrl": "./",
    "typeRoots": ["./src/types"],
    "paths": {
      "@components": ["./src/components"],
      "@config": ["./src/config"],
      "@constants": ["./src/constants"],
      "@hooks": ["./src/hooks"],
      "@navigation": ["./src/navigation"],
      "@redux": ["./src/redux"],
      "@screens": ["./src/screens"],
      "@services": ["./src/services"],
      "@styles": ["./src/styles"],
      "@types": ["./src/types"],
      "@utils": ["./src/utils"]
    },
    "skipLibCheck": true
  }
}
